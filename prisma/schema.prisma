generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  session Session[]
}

model Exercise {
  id Int @id @default(autoincrement())
  name String @unique
  session Session[]
}

model Session {
  id Int @id @default(autoincrement())
  date DateTime
  durationmin Int?
  distancek Float?
  notes String?
  user User[]
  exercise Exercise[]
}